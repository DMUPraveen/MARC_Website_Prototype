---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import Breadcrumb from "../../components/Breadcrumb.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import "../../styles/app.css";

const projects = await getCollection("projects");
---

<BaseLayout>
    <div class="max-w-7xl mx-auto px-4 py-8">
        <Breadcrumb>
            <li><a href="/">Home</a></li>
            <li>Projects</li>
        </Breadcrumb>

        <main class="mt-8">
            {/* Header Section */}
            <div class="mb-12 text-center max-w-2xl mx-auto">
                <h1 class="text-5xl font-bold mb-4 text-primary">
                    Research Projects
                </h1>
                <p class="text-lg text-base-content/70">
                    Exploring the frontiers of engineering and AI.
                </p>
            </div>

            {/* Projects Grid */}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    projects.map((project) => (
                        <a
                            href={`/projects/${project.id}`}
                            class="card bg-base-100 shadow-sm border border-base-200 hover:shadow-2xl hover:-translate-y-1 hover:border-primary transition-all duration-300 group h-full flex flex-col"
                        >
                            {/* Cover Image */}
                            <figure class="aspect-video overflow-hidden relative bg-base-200">
                                {project.data.coverImage ? (
                                    <Image
                                        src={project.data.coverImage}
                                        alt={project.data.project}
                                        width={600}
                                        height={337}
                                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                    />
                                ) : (
                                    /* Fallback if no image */
                                    <div class="w-full h-full flex items-center justify-center bg-base-200 text-base-content/20">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            class="h-16 w-16"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                                            />
                                        </svg>
                                    </div>
                                )}

                                {/* Research Area Overlay Badge (Top Right) */}
                                <div class="absolute top-3 right-3">
                                    <div class="badge badge-secondary shadow-md font-semibold">
                                        {project.data.researchArea}
                                    </div>
                                </div>
                            </figure>

                            <div class="card-body p-6 flex flex-col flex-grow">
                                {/* Title */}
                                <h2 class="card-title text-xl font-bold mb-2 group-hover:text-primary transition-colors">
                                    {project.data.project}
                                </h2>

                                {/* Research Pillars (Tags) */}
                                <div class="flex flex-wrap gap-2 mt-auto pt-4">
                                    {project.data.researchPillars?.map(
                                        (pillar) => (
                                            <span class="badge badge-outline badge-sm text-xs">
                                                {pillar}
                                            </span>
                                        ),
                                    )}
                                </div>

                                {/* Bottom Info Row */}
                                <div class="divider my-2" />
                                <div class="flex justify-between items-center text-xs text-base-content/60 font-medium">
                                    <div class="flex items-center gap-1">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            viewBox="0 0 20 20"
                                            fill="currentColor"
                                            class="w-4 h-4"
                                        >
                                            <path d="M7 8a3 3 0 100-6 3 3 0 000 6zM14.5 9a2.5 2.5 0 100-5 2.5 2.5 0 000 5zM1.615 16.428a1.224 1.224 0 01-.569-1.175 6.002 6.002 0 0111.908 0c.058.467-.172.92-.57 1.174A9.953 9.953 0 017 18a9.953 9.953 0 01-5.385-1.572zM14.5 16h-.106c.07-.297.088-.611.048-.933a7.47 7.47 0 00-1.588-3.755 4.502 4.502 0 015.874 2.636.818.818 0 01-.36.98A7.465 7.465 0 0114.5 16z" />
                                        </svg>
                                        {/* Calculate total team size */}
                                        <span>
                                            {(project.data.projectMembers
                                                ?.length || 0) +
                                                (project.data.supervisors
                                                    ?.length || 0)}{" "}
                                            Members
                                        </span>
                                    </div>
                                    <span class="group-hover:translate-x-1 transition-transform text-primary font-bold">
                                        View Project &rarr;
                                    </span>
                                </div>
                            </div>
                        </a>
                    ))
                }
            </div>
        </main>
    </div>
</BaseLayout>
