---
import { imageConfig } from "astro:assets";
import "../styles/app.css";
import BaseLayout from "./BaseLayout.astro";
import type { ImageMetadata } from "astro";
import { getCollection, getEntry } from "astro:content";
import { map } from "astro:schema";

const { frontmatter } = Astro.props;
const coverimage = frontmatter.coverImage;
const imageKey = `/src/assets/${frontmatter.coverImage}`;
const images = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/*.{jpeg,jpg,png,gif}",
    { eager: true },
);
const image_sorce = images[imageKey].default.src;
const backgroundUrl = `url(${image_sorce})`;

const projects = await getCollection("projects");

const relatedProjects = projects.filter(
    (project) => project.data.researchArea == frontmatter.title,
);
---

<style define:vars={{ backgroundUrl }}>
    .hero {
        background-image: var(--backgroundUrl);
        background-size: cover;
        background-position: center;
    }
</style>

<BaseLayout>
    <article class="prose prose-lg max-w-none">
        <div class="px-4 py-4">
            <h1>{frontmatter.title}</h1>
            <div class="hero min-h-100"></div>
            <slot />
            <h2>Related Projects</h2>
            <ul>
                {
                    relatedProjects.map((project) => (
                        <li>
                            <a href={`/projects/${project.id}`}>
                                {project.data.project}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </article>
</BaseLayout>
