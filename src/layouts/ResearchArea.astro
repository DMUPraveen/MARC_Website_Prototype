---
import { imageConfig } from "astro:assets";
import "../styles/app.css";
import BaseLayout from "./BaseLayout.astro";
import type { ImageMetadata } from "astro";
const { frontmatter } = Astro.props;
const coverimage = frontmatter.coverImage;
const imageKey = `/src/assets/${frontmatter.coverImage}`;
const images = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/*.{jpeg,jpg,png,gif}",
    { eager: true },
);

console.log(imageKey);
console.log(images);
console.log(images[imageKey].default.src);
const image_sorce = images[imageKey].default.src;
const backgroundUrl = `url(${image_sorce})`;
---

<style define:vars={{ backgroundUrl }}>
    .hero {
        background-image: var(--backgroundUrl);
        background-size: cover;
        background-position: center;
    }
</style>

<BaseLayout>
    <article class="prose prose-lg max-w-none">
        <div class="px-4 py-4">
            <h1>{frontmatter.title}</h1>
            <div class="hero min-h-100"></div>
            <slot />
        </div>
    </article>
</BaseLayout>
